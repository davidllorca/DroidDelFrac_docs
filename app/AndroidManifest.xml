        <activity
            android:name=".activity.EditProfileActivity"
            android:label="Editar perfil"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EventListActivity"
            android:label="Eventos"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EventActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.CreateEventActivity"
            android:label="Nuevo evento"            
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EventListMenuActivity"
            android:label="Eventos"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.InviteGuestsActivity"
            android:label="Agregar gente" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
