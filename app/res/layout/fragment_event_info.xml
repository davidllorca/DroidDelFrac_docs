<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="tabEventInfo"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/linearInfoEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageInfoEvent"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_margin="20dip"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/descriptionInfoEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Descripción del evento"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placeInfoEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionInfoEvent"
                android:layout_weight="1"
                android:text="Lugar del evento"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dateInfoEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placeInfoEvent"
                android:text="fecha"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewBugdetTitle"
        android:layout_below="@id/linearInfoEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_droid"
        android:text="@string/bugdetTitle" />

    <TextView
        android:id="@+id/textViewBudgetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewBugdetTitle"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/green_droid"
        android:layout_alignParentRight="true"
        android:text="0 €" />

    <ListView
        android:layout_below="@id/textViewBugdetTitle"
        android:id="@+id/amountList"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <ImageView
        android:id="@+id/imageNoExp"
        android:layout_below="@+id/textViewBugdetTitle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/aviso"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/textNoExp"
        android:layout_below="@+id/imageNoExp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
        android:visibility="gone"
        android:textSize="16sp"
        android:text="@string/infoExp" />

</RelativeLayout>
