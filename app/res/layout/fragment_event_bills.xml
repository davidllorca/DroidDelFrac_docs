<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listViewBills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPhone"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textViewPhone" >

    </ListView>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="left|center_vertical"
        android:text="@string/eventBillTitle"
        android:textSize="20sp" />
    
    <ImageView
        android:id="@+id/imageNoBills"
        android:layout_below="@+id/textViewPhone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/aviso"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/textNoBills"
        android:layout_below="@+id/imageNoBills"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:textSize="16sp"
        android:text="@string/infoBills" />

</RelativeLayout>
