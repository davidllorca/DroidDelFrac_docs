<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imageViewArrow"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewAvatarGuestLeft"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textViewGuestLeft"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:gravity="center_vertical|center_horizontal"
            android:text="contact name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewArrow"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewAvatarGuestRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textViewGuestRight"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:gravity="center_vertical|center_horizontal"
            android:text="contact name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_bill_pay" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewArrow"
        android:layout_centerHorizontal="true"
        android:text="amount" />

</RelativeLayout>